<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialGruppo4</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>

<body>
    <header class="fixed-navbar">
        <div id="logo">Social</div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a href="#">Notifiche</a>
            <a href="#">Messaggi</a>
            <div class="dropdown">
                <button class="dropbtn">Menu</button>
                <div class="dropdown-content">
                    @if (ViewBag.User is not null)
                    {
                        <a href="#">Profilo</a>
                        @if (ViewBag.User.Amministratore)
                        {
                            <a asp-controller="Auth" asp-action="RegistraDipendente">Registra Dipendente</a>
                        }
                        <form asp-controller="Auth" asp-action="Logout" method="POST">
                            <button id="logout" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Index">Accedi</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="separatore"></div>
    <main>
        @RenderBody()
    </main>

    <footer>
        Progetto Social - Gruppo 4
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
