@{
    ViewData["Title"] = "Registra Dipendente";
}

<section>
    <form action="/registra-dipendente" method="POST">
        <div class="form-group">
            <label for="nominativo">Nominativo</label>
            <input type="text" id="nominativo" name="nominativo" required>
        </div>
        <div class="form-group">
            <label for="codiceFiscale">Codice Fiscale</label>
            <input type="text" id="codiceFiscale" name="codiceFiscale" required>
        </div>
        <div class="form-group">
            <label for="numero">Cellulare</label>
            <input type="text" id="numero" name="numero" required>
        </div>
        <div class="form-group">
            <label for="residenza">Residenza</label>
            <input type="text" id="residenza" name="residenza">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="form-buttons">
            <button type="submit">Registra</button>
        </div>
    </form>
</section>